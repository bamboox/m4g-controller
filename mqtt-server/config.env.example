# MQTT服务器配置文件
# 复制此文件为 .env 并修改配置

# MQTT Broker配置
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# HTTP服务器配置
HTTP_PORT=8080

# 调试选项
MQTT_DEBUG=false

# 日志配置
LOG_LEVEL=info
LOG_FILE=mqtt-server.log

# 设备管理配置
MAX_DEVICES=1000
DEVICE_TIMEOUT=300  # 设备超时时间（秒）

# 安全配置（生产环境）
ENABLE_AUTH=false
JWT_SECRET=your-secret-key